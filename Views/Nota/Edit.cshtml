@model Nota

@{
    ViewData["Title"] = "Edit Page";
}

<form asp-controller="Nota" asp-action="Edit" method="post">
    
<div class="text-center">
        <h1 class="rust-font">Editar Nota</h1>
        <label asp-for="MatriculaID" class="form-label">Matrícula</label>
        <select asp-for="MatriculaID" asp-items="ViewBag.Matriculas" class="form-select" required>
            <option value="">Selecione uma matrícula</option>
        </select>
        <span asp-validation-for="MatriculaID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Valor" class="form-label">Nota</label>
        <input asp-for="Valor" class="form-control" pattern="[1-0]" min="0" max="10" step="0.01" title="DIGITE APENAS NUMEROS, VIRGULA/PONTO!!" required/>
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <button type="submit" class="botaoCriar">Salvar</button>
    <input type="hidden" asp-for="NotaID" />
</form>