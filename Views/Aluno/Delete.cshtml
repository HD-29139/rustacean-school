@model Aluno

@{
    ViewData["Title"] = "Deleting Page";
}

<div class="text-center">
    <h1 class="rust-font">Remover Aluno</h1>

    <div class="Ferris">
    <img src="@Url.Content("~/img/173-1736275_explain-alarmed-ferris-convention-rust-lang-clipart-3155935025.png")"
         alt="Rustacean Logo" width="300" class="FerrisComum" />

        <p class="Introp">Quer mesmo remover o aluno (@Model.Nome)?</p>


        <a class="botaoRemoverDentro" asp-controller="Aluno" asp-action="Remove" asp-route-id="@Model.AlunoID">Remover</a>
        <a class="botaoVoltarDentro" asp-controller="Aluno" asp-action="Index">Voltar</a>
    <div class="mb-3">
    </div>
</div>
</div>