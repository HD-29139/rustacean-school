@model Aluno

@{
    ViewData["Title"] = "Edit Page";
}

<div class="text-center">
    <h1 class="display-4">Adicionar Aluno</h1>
    <form asp-controller="Aluno" asp-action="Update" method="post">
        <div class="mb-3">
        <label for="nome" class="form-label">Nome do aluno</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Nome" required>
        <button type="submit" class="btn btn-primary">Editar</button>
        </div>
        <input type="hidden" asp-for="AlunoID">
    </form>


</div>
