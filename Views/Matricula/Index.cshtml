@model List<Matricula>

@{
    ViewData["Title"] = "Matricula Page";
    var contador = 1;
}

<div class="text-center">
    <h1 class="EscR">Matrículas</h1>
    <div class="Ferris">
        <img src="@Url.Content("~/img/rustacean-orig-noshadow-56857821.png")" alt="Rustacean Logo" width="240" class="FerrisComum" />
        <p class="Introp">É importante se matricular em uma matéria correta para evoluir cada vez mais!</p>
    </div>

    <a type="button" class="botaoCriar" asp-controller="Matricula" asp-action="Create">Criar Matrícula</a>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome do Aluno</th>
                <th scope="col">Nome da Disciplina</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Matricula matricula in Model)
                {
                    <tr>
                        <th scope="row">@contador</th>
                        <td>@matricula.Aluno.Nome</td>
                        <td>@matricula.Disciplina.Nome</td>
                        <td>
                            <div class="divisorbotaolista">
                                <a class="botaoEditar" asp-controller="Matricula" asp-action="Edit" asp-route-id="@matricula.MatriculaID">Editar Matrícula</a>
                                <a class="botaoRemover" asp-controller="Matricula" asp-action="Delete" asp-route-id="@matricula.MatriculaID">Remover Matrícula</a>
                            </div>
                        </td>
                    </tr>
                    contador++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4">Nenhuma matrícula cadastrada.</td>
                </tr>
            }
        </tbody>
    </table>
</div>